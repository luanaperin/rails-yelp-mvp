<h1>Restaurant</h1>



  <h2>Name: <%= @restaurant.name %></h2>
  <p><strong>Address:</strong> <%= @restaurant.address %></p>
  <p><strong>Phone Number:</strong> <%= @restaurant.phone_number %></p>
  <p><strong>Category:</strong> <%= @restaurant.category %></p>




<%= link_to "Delete", restaurant_path(@restaurant), method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-primary" %>

<%= link_to "All Restaurants", restaurants_path, class: "btn btn-primary" %>

<%= link_to "Edit Restaurant", edit_restaurant_path(@restaurant), class: "btn btn-primary" %>

<%= link_to "Reviews", restaurant_reviews_path(@restaurant), class: "btn btn-primary" %>
